<script>
// Animación de scroll con control de duración y easing (tipada para evitar errores de compilación)
(function () {
    function easeOutCubic(t: number) { return 1 - Math.pow(1 - t, 3); }

    function smoothScrollToElement(targetEl: Element | null, duration: number, offset: number = 0) {
        if (!targetEl) return;
        const start = window.pageYOffset;
        const targetRect = targetEl.getBoundingClientRect();
        const targetY = start + targetRect.top - offset;
        const startTime = performance.now();

        function step(now: number) {
            const time = Math.min(1, (now - startTime) / duration);
            const eased = easeOutCubic(time);
            window.scrollTo(0, Math.round(start + (targetY - start) * eased));
            if (time < 1) requestAnimationFrame(step);
        }
        requestAnimationFrame(step);
    }

    document.addEventListener('click', function (e: MouseEvent) {
        let el = e.target as HTMLElement | null;
        // sube hasta encontrar un <a>
        while (el && el.tagName !== 'A') el = el.parentElement as HTMLElement | null;
        if (!el) return;
        const href = el.getAttribute('href');
        if (!href || href.charAt(0) !== '#') return;
        const target = document.querySelector(href);
        if (!target) return;
        // Previene comportamiento por defecto y hace scroll animado
        e.preventDefault();
        const header = document.querySelector('.nav-bar') as HTMLElement | null;
        const offset = header ? (header.offsetHeight + 8) : 8; // pequeño espacio
        smoothScrollToElement(target, 700, offset);
        // actualiza la URL sin recargar
        if (history && history.pushState) history.pushState(null, '', href);
    }, false);
})();
</script>